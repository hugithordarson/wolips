<?xml version="1.0"?>

<!-- ======================================================== -->
<!--        Main WOLips plugins Ant build file                -->
<!-- Serves as a facade for different helper build files.     -->
<!-- ======================================================== -->
<project name="wolips" default="" basedir=".">
	<!-- ========================================== -->
	<!-- Build all.                                 -->
	<!-- ========================================== -->
	<target name="all">
		<ant dir="org.objectstyle.wolips.maven.core" target="all" />
		<ant dir="org.objectstyle.wolips.maven.launching" target="all" />
		<ant dir="org.objectstyle.wolips.maven.ui" target="all" />
	</target>
	<!-- ========================================== -->
	<!-- Build dist.                                -->
	<!-- ========================================== -->
	<target name="dist">
		<ant dir="org.objectstyle.wolips.maven.core" target="dist" />
		<ant dir="org.objectstyle.wolips.maven.launching" target="dist" />
		<ant dir="org.objectstyle.wolips.maven.ui" target="dist" />
	</target>
</project>
