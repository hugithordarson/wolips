<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.objectstyle.wolips.eomodeler.editors.EOModelEditor"
            contributorClass="org.objectstyle.wolips.eomodeler.editors.EOModelEditorContributor"
            extensions="eomodeld, plist"
            icon="icons/eoModel.gif"
            id="org.objectstyle.wolips.eomodeler.editors.EOModelEditor"
            matchingStrategy="org.objectstyle.wolips.eomodeler.editors.EOModelMatchingStrategy"
            name="EOModel Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            name="EOModel (Experimental)"
            icon="icons/eoModel.gif"
            category="org.objectstyle.wolips.wizards"
            class="org.objectstyle.wolips.eomodeler.wizards.SampleNewWizard"
            id="org.objectstyle.wolips.eomodeler.wizards.SampleNewWizard">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            class="org.objectstyle.wolips.eomodeler.decorators.EOEntityDecorator"
            id="org.objectstyle.wolips.eomodeler.decorators.EOEntityDecorator"
            label="EOEntity Decorator"
            lightweight="false"
            state="true">
         <enablement>
            <and>
               <objectState
                     name="extension"
                     value="plist"/>
               <objectClass name="org.eclipse.core.resources.IFile"/>
            </and>
         </enablement>
      </decorator>
      <decorator
            class="org.objectstyle.wolips.eomodeler.decorators.EOModelDecorator"
            icon="icons/eoModel.gif"
            id="org.objectstyle.wolips.eomodeler.decorators.EOModelDecorator"
            label="EOModel Decorator"
            lightweight="false"
            state="true">
         <enablement>
            <and>
               <objectClass name="org.eclipse.core.resources.IResource"/>
               <objectState
                     name="extension"
                     value="eomodeld"/>
            </and>
         </enablement>
      </decorator>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor contributorId="org.objectstyle.wolips.eomodeler.editors.EOModelEditor">
         <propertyCategory category="eomodel"/>
         <propertyCategory category="eorelationship"/>
         <propertyCategory category="eoentity"/>
         <propertyCategory category="eoattribute"/>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs contributorId="org.objectstyle.wolips.eomodeler.editors.EOModelEditor">
         <propertyTab
               category="eomodel"
               id="org.objectstyle.wolips.eomodeler.tabs.connectionDictionary"
               image="icons/eoModel.gif"
               label="Adaptor"/>
         <propertyTab
               afterTab="org.objectstyle.wolips.eomodeler.tabs.connectionDictionary"
               category="eomodel"
               id="org.objectstyle.wolips.eomodeler.tabs.eomodelUserInfo"
               image="icons/eoModel.gif"
               label="User Info"/>
         <propertyTab
               category="eoentity"
               id="org.objectstyle.wolips.eomodeler.tabs.eoentityUserInfo"
               image="icons/eoEntity.gif"
               label="User Info"/>
         <propertyTab
               category="eoattribute"
               id="org.objectstyle.wolips.eomodeler.tabs.eoattributeUserInfo"
               image="icons/eoAttribute.gif"
               label="User Info"/>
         <propertyTab
               category="eorelationship"
               id="org.objectstyle.wolips.eomodeler.tabs.eorelationshipBasic"
               image="icons/eoRelationship.gif"
               label="Basic"/>
         <propertyTab
               afterTab="org.objectstyle.wolips.eomodeler.tabs.eorelationshipBasic"
               category="eorelationship"
               id="org.objectstyle.wolips.eomodeler.tabs.eorelationshipAdvanced"
               image="icons/eoRelationship.gif"
               label="Advanced"/>
         <propertyTab
               afterTab="org.objectstyle.wolips.eomodeler.tabs.eorelationshipAdvanced"
               category="eorelationship"
               id="org.objectstyle.wolips.eomodeler.tabs.eorelationshipUserInfo"
               image="icons/eoRelationship.gif"
               label="User Info"/>
      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections contributorId="org.objectstyle.wolips.eomodeler.editors.EOModelEditor">
         <propertySection
               class="org.objectstyle.wolips.eomodeler.properties.ConnectionDictionarySection"
               id="org.objectstyle.wolips.eomodeler.connectionDictionarySection"
               tab="org.objectstyle.wolips.eomodeler.tabs.connectionDictionary">
            <input type="org.objectstyle.wolips.eomodeler.model.EOModel"/>
         </propertySection>
         <propertySection
               class="org.objectstyle.wolips.eomodeler.editors.userInfo.UserInfoPropertySection"
               id="org.objectstyle.wolips.eomodeler.eomodelUserInfoSection"
               tab="org.objectstyle.wolips.eomodeler.tabs.eomodelUserInfo">
            <input type="org.objectstyle.wolips.eomodeler.model.EOModel"/>
         </propertySection>
         <propertySection
               class="org.objectstyle.wolips.eomodeler.editors.userInfo.UserInfoPropertySection"
               id="org.objectstyle.wolips.eomodeler.eoentityUserInfoSection"
               tab="org.objectstyle.wolips.eomodeler.tabs.eoentityUserInfo">
            <input type="org.objectstyle.wolips.eomodeler.model.EOEntity"/>
         </propertySection>
         <propertySection
               class="org.objectstyle.wolips.eomodeler.editors.userInfo.UserInfoPropertySection"
               id="org.objectstyle.wolips.eomodeler.eoattributeUserInfoSection"
               tab="org.objectstyle.wolips.eomodeler.tabs.eoattributeUserInfo">
            <input type="org.objectstyle.wolips.eomodeler.model.EOAttribute"/>
         </propertySection>
         <propertySection
               class="org.objectstyle.wolips.eomodeler.editors.relationship.EORelationshipBasicEditorSection"
               id="org.objectstyle.wolips.eomodeler.eorelationshipBasicSection"
               tab="org.objectstyle.wolips.eomodeler.tabs.eorelationshipBasic">
            <input type="org.objectstyle.wolips.eomodeler.model.EORelationship"/>
            <input type="org.objectstyle.wolips.eomodeler.model.EORelationshipPath"/>
         </propertySection>
         <propertySection
               class="org.objectstyle.wolips.eomodeler.editors.relationship.EORelationshipAdvancedEditorSection"
               id="org.objectstyle.wolips.eomodeler.eorelationshipAdvancedSection"
               tab="org.objectstyle.wolips.eomodeler.tabs.eorelationshipAdvanced">
            <input type="org.objectstyle.wolips.eomodeler.model.EORelationship"/>
            <input type="org.objectstyle.wolips.eomodeler.model.EORelationshipPath"/>
         </propertySection>
         <propertySection
               class="org.objectstyle.wolips.eomodeler.editors.userInfo.UserInfoPropertySection"
               id="org.objectstyle.wolips.eomodeler.eorelationshipUserInfoSection"
               tab="org.objectstyle.wolips.eomodeler.tabs.eorelationshipUserInfo">
            <input type="org.objectstyle.wolips.eomodeler.model.EORelationship"/>
            <input type="org.objectstyle.wolips.eomodeler.model.EORelationshipPath"/>
         </propertySection>
      </propertySections>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.objectstyle.wolips.eomodeler.EOModelerPerspectiveFactory"
            icon="icons/eoModel.gif"
            id="org.objectstyle.wolips.eomodeler.EOModelerPerspective"
            name="EO Modeler"/>
   </extension>

</plugin>
